package PlatformDataBaseTesting;

import java.sql.*;

public class PlatformDataBaseTest 
{
	public static void main(String [] args)
	{
		// create variable for the Connection string
		String ConnectionURL= "jdbc:sqlServer://localhost:1433;" +
		 "databaseName=Platform92.me; integratedSecurity = true;";
		// Declare the JDBC object.
		Connection con = null;
		Statement stmt = null;
		ResultSet rs = null;
			try
			{
				// Establish the connection.
				Class.forName("com.microsoft.sqlserver.jdbc.SQLServerDriver");
				con = DriverManager.getConnection(ConnectionURL);
				System.out.println("Connection Establish");
				
				String SQL = "Select UserId, Username, email, IsDeleted from dbo.Users;";
				stmt = con.createStatement();
				rs = stmt.executeQuery(SQL);
				while (rs.next())
				{
					System.out.println(rs.getString(0)+ " " + rs.getString(1)+" " + rs.getString(2)+" "+ rs.getString(3));
				}
			}
			// handle the error that may have occurred.
			catch(Exception e)
			{
				e.printStackTrace();
			}
			finally
			{
				if(rs!= null) try {rs.close();} catch(Exception e) {}
				if(stmt!= null) try{stmt.close();} catch(Exception e) {}
				if(con!= null) try {con.close();} catch(Exception e) {}
			}
	}
}
